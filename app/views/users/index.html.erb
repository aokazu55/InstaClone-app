<p id="notice"><%= notice %></p>

<h1>FaceAppers</h1>

  <table>
    <thead>
      <tr>
        <th>イメージ</th>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>パスワード</th>
        <th></th>
      </tr>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="a"><%= image_tag user.image.to_s %></td>
          <td class="b"><%= user.name %></td>
          <td class="c"><%= user.email %></td>
          <td class="d"><%= user.password_digest %></td>
          <td class="e"><%= link_to '詳細', user %></td>
          <td class="f"><%= link_to '編集', edit_user_path(user) %></td>
          <td class="g"><%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除しても良いですか?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<div class="footer">
  <%= link_to '新規ユーザーはコチラ', new_user_path %>
</div>
