<h1>FaceApps</h1>

<table>
  <div class="user_thead">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>内容</th>
        <th>ユーザーID</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  </div>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user_id %></td>
        <td><%= image_tag post.image.to_s %></td>
        <td><%= link_to '詳細をみる', post %></td>
        <td><%= link_to '編集する', edit_post_path(post) %></td>
        <td><%= link_to '削除する', post, method: :delete, data: { confirm: '本当に削除して良いですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="footer">
  <%= link_to '新規投稿する', new_post_path %>
</div>
